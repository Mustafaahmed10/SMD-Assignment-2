<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/light_pink" />

    <!-- Rounded corners -->
    <corners android:radius="30dp" />

    <!-- Optional stroke (border) -->
    <stroke
        android:width="0dp"
        android:color="@color/black" />

    <!-- Padding inside rectangle -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
